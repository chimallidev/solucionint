<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Solucionint" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@null</item>
    </style>

    <style name="Theme.Solucionint" parent="Base.Theme.Solucionint" />

<!--Tema titular barra ArticlesSelectorActivity-->
    <style name="Barra_titular">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/symtext</item>
        <item name="android:textColor">@color/secundario</item>
    </style>

    <style name="Articles_Selector_Titles" parent="Barra_titular">
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/symtext</item>
    </style>

<!--Tema contador Articles Selector-->
    <style name="Contador_selector">
        <item name="android:textSize">40sp</item>
        <item name="android:fontFamily">@font/symtext</item>
        <item name="android:textColor">@color/chimalli</item>
    </style>

    <style name="de_selector" parent="Contador_selector">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/accent</item>

    </style>

    <style name="selector_maxim_number" parent="de_selector">
        <item name="android:textColor">@color/secundario</item>
    </style>

    <style name="btn_regresar" parent="de_selector">
    <item name="android:textSize">15sp</item>
</style>

    <style name="btn_entrar" parent="de_selector">
        <item name="android:textSize">30sp</item>
    </style>
    <style name="dialogue_articles_selector" parent="de_selector">
        <item name="android:backgroundTint">@color/secundario</item>
        <item name="android:textColor">@color/secundario</item>
        <item name="android:textColorHint">@color/secundario</item>
        <item name="android:textSize">22sp</item>
    </style>
    <style name="btn_articles_selector" parent="dialogue_articles_selector">
        <item name="android:textColor">@color/accent</item>
        <item name="android:textSize">18sp</item>
        <item name="android:backgroundTint">@null</item>
        <item name="android:textColorHint">@null</item>
    </style>

    <style name="rvItemArticles">
        <item name="android:textColor">#cf005c</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/symtext</item>
    </style>

    <style name="no_existen_elementos" parent="Articles_Selector_Titles">
        <item name="android:textSize">23sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>
    <style name="loading" parent="Barra_titular">
        <item name="android:textSize">30sp</item>
    </style>
    <style name="time_meters_titulares">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/symtext</item>
    </style>
    <style name="card_time_meters" parent="time_meters_titulares">
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/accent</item>
    </style>

<!--Cronometro-->
<style name="unit_types">
    <item name="android:textColor">@color/accent</item>
    <item name="android:fontFamily">@font/symtext</item>
    <item name="android:layout_marginBottom">105dp</item>
    <item name="android:textSize">260sp</item>
    <item name="android:layout_marginStart">35dp</item>
</style>
    <style name="minutes" parent="unit_types">
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">145sp</item>
        <item name="android:layout_marginStart">20dp</item>
    </style>
    <style name="hours" parent="unit_types">
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:textSize">90sp</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>
<!--Tablero Bottom-->
    <style name="lap">
        <item name="android:textColor">@color/accent</item>
        <item name="android:fontFamily">@font/symtext</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginStart">3dp</item>
    </style>
    <style name="elapsed_time" parent="lap">
        <item name="android:textColor">@color/secundario</item>
        <item name="android:textSize">37sp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginStart">10dp</item>

    </style>
    <style name="units_cronometro">
        <item name="android:textColor">@color/secundario</item>
        <item name="android:textSize">40sp</item>
        <item name="android:fontFamily">@font/symtext</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>
    <style name="btnStart" parent="lap">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="btnRestart" parent="btnStart">
        <item name="android:textSize">19sp</item>
    </style>
    <style name="fin_del_mapa" parent="hours">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textAlignment">center</item>
    </style>
</resources>